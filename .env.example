# .env.example
# 这个文件用来示例配置变量
# 部署时请将其改名为 .env 并进行适配配置

# Nonebot2配置
DRIVER=~fastapi+~httpx
HOST=127.0.0.1
PORT=8080
DEBUG=false
ONEBOT_ACCESS_TOKEN=your_access_token
ONEBOT_SECRET=your_secret

# CS2 HLTV插件配置
CS2_HLTV_PLUGIN_CACHE_DURATION_MATCHES=60
CS2_HLTV_PLUGIN_CACHE_DURATION_TEAMS=3600
CS2_HLTV_PLUGIN_CACHE_DURATION_RESULTS=300

CS2_HLTV_PLUGIN_MAX_MATCHES_PER_QUERY=10
CS2_HLTV_PLUGIN_MAX_TEAMS_IN_RANKING=30
CS2_HLTV_PLUGIN_MAX_RESULTS_PER_QUERY=20
CS2_HLTV_PLUGIN_DEFAULT_QUERY_DAYS=1

CS2_HLTV_PLUGIN_ENABLE_CACHING=true
CS2_HLTV_PLUGIN_ENABLE_DETAILED_LOGGING=false
CS2_HLTV_PLUGIN_ENABLE_TOPIC_DETECTION=true

CS2_HLTV_PLUGIN_CONTEXT_DEPTH_DEFAULT=basic
CS2_HLTV_PLUGIN_INCLUDE_MATCH_RATINGS=true
CS2_HLTV_PLUGIN_SHOW_LIVE_SCORES=true
CS2_HLTV_PLUGIN_SHOW_RANKING_CHANGES=true
